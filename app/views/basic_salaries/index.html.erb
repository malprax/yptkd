<h1>Listing Basic Salaries</h1>

<table>
  <thead>
    <tr>
      <th>Golongan</th>
      <th>Satuan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @basic_salaries.each do |basic_salary| %>
      <tr>
        <td><%= basic_salary.golongan %></td>
        <td><%= basic_salary.satuan %></td>
        <td><%= link_to 'Show', basic_salary %></td>
        <td><%= link_to 'Edit', edit_basic_salary_path(basic_salary) %></td>
        <td><%= link_to 'Destroy', basic_salary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

