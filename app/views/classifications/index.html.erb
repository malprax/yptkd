<div class='container'>
  <div class='row'>
    <h3 class='lead'>Rincian Golongan Dan Tunjangannya Berdasarkan Peraturan Pemerintah No 30 Tahun 2015&nbsp;&nbsp;<%= link_to 'Tambah Golongan', new_classification_path, class:'btn btn-default' %>&nbsp;&nbsp;<%= link_to 'Download', classifications_path(@classifications, format:'pdf'), target:'_blank', class:'btn btn-primary' %></h3>
    <table class='table table-hover table-striped'>
      <thead>
        <tr>
          <th>Golongan</th>
          <th>Satuan</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @classifications.each do |classification| %>
          <tr>
            <td><%= classification.nama %></td>
            <td><%= "#{number_to_currency(classification.satuan, precision:0, unit:'Rp ')}" %></td>

            <td><%= link_to 'Edit', edit_classification_path(classification), class:'btn btn-warning' %>&nbsp;&nbsp;<%= link_to 'Hapus', classification, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


  </div>
</div>
