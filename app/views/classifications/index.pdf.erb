<div class='container'>
  <div class='row'>
    <h3 class='lead'>Rincian Golongan Dan Tunjangannya Berdasarkan Peraturan Pemerintah No 30 Tahun 2015</h3>
    <table class='table table-hover table-bordered table-striped'>
      <thead>
        <tr>
          <th>Golongan</th>
          <th>Satuan</th>
        </tr>
      </thead>

      <tbody>
        <% @classifications.each do |classification| %>
          <tr>
            <td><%= classification.nama %></td>
            <td><%= "#{number_to_currency(classification.satuan, precision:0, unit:'Rp ')}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


  </div>
</div>
