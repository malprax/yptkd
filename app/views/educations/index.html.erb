<div class="container">
  <div class="row">
    <h3 class='lead'>Rincian Pendidikan Dan Tunjangannya&nbsp;&nbsp;<%= link_to 'Buat Pendidikan', new_education_path, class:'btn btn-default' %>&nbsp;&nbsp;<%= link_to 'Download', educations_path(@educations, format:'pdf'), target:'_blank', class:'btn btn-primary' %></h3>
    <table class='table table-hover table-striped'>
      <thead>
        <tr>
          <th>Nama</th>
          <th>Satuan</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @educations.each do |education| %>
          <tr>
            <td><%= education.nama.upcase %></td>
            <td><%= "#{number_to_currency(education.satuan, precision: 0, unit:'Rp ')}" %></td>

            <td><%= link_to 'Edit', edit_education_path(education), class:'btn btn-warning' %>&nbsp;&nbsp;<%= link_to 'Hapus', education, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>

          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>
