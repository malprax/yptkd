<p id="notice"><%= notice %></p>

<h1>Listing Functional Allowances</h1>

<table>
  <thead>
    <tr>
      <th>Nama</th>
      <th>Satuan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @functional_allowances.each do |functional_allowance| %>
      <tr>
        <td><%= functional_allowance.nama %></td>
        <td><%= functional_allowance.satuan %></td>
        <td><%= link_to 'Show', functional_allowance %></td>
        <td><%= link_to 'Edit', edit_functional_allowance_path(functional_allowance) %></td>
        <td><%= link_to 'Destroy', functional_allowance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

