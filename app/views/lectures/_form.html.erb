<%= simple_form_for(@lecture) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nama %>
    <%= f.input :nidn %>
    <%= f.input :education_id %>
    <%= f.input :functional_allowance_id %>
    <%= f.input :structural_allowance_id %>
    <%= f.input :special_allowance_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
