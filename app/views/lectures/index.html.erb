<p id="notice"><%= notice %></p>

<h1>Listing Lectures</h1>

<table>
  <thead>
    <tr>
      <th>Nama</th>
      <th>Nidn</th>
      <th>Education</th>
      <th>Functional allowance</th>
      <th>Structural allowance</th>
      <th>Special allowance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.nama %></td>
        <td><%= lecture.nidn %></td>
        <td><%= lecture.education_id %></td>
        <td><%= lecture.functional_allowance_id %></td>
        <td><%= lecture.structural_allowance_id %></td>
        <td><%= lecture.special_allowance_id %></td>
        <td><%= link_to 'Show', lecture %></td>
        <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

