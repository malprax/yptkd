<div class='container'>
  <div class='row'>
    <h3 class='lead'>Daftar Dosen</h3>

    <table class='table table-bordered table-hover table-striped'>
      <thead>
        <tr>
          <th>Nama</th>
          <th>NIDN</th>
          <th>Pendidikan</th>
          <th>J. Fungsional</th>
          <th>J. Struktural</th>
          <th>J. Khusus</th>
        </tr>
      </thead>

      <tbody>
        <% @lectures.each do |lecture| %>
          <tr>
            <td><%= lecture.nama.upcase rescue nil %></td>
            <td><%= lecture.nidn %></td>
            <td><%= lecture.education.nama.upcase rescue nil %></td>
            <td><%= lecture.functional_allowance.nama.titleize rescue nil %></td>
            <td><%= lecture.structural_allowance.nama.titleize rescue nil %></td>
            <td><%= lecture.special_allowance.nama.titleize rescue nil %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>

</div>
