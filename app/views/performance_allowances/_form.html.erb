<%= simple_form_for(@performance_allowance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :range_mahasiswa, label: 'Jumlah Mahasiswa' %>
    <%= f.input :satuan, label: 'Satuan' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:'btn btn-default' %>&nbsp;&nbsp;<%= link_to 'Kembali', performance_allowances_path, class: 'btn btn-success' %>
  </div>
<% end %>
