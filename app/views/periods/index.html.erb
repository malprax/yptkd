<div class="container">
  <div class='row'>
    <h3 class='lead'>Periode&nbsp;&nbsp;<%= link_to 'Buat Periode', new_period_path, class: 'btn btn-default' %>&nbsp;&nbsp;<%= link_to 'Download', periods_path(@periods, format:'pdf'), target:'_blank', class:'btn btn-primary' %></h3>

    <table class='table table-hover table-striped'>
      <thead>
        <tr>
          <th>Bulan</th>
          <th>Tahun</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @periods.each do |period| %>
          <tr>
            <td><%= period.bulan.titleize %></td>
            <td><%= period.tahun %></td>
            <td><%= link_to 'Edit', edit_period_path(period), class:'btn btn-warning' %>&nbsp;&nbsp;<%= link_to 'Hapus', period, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>

</div>
