<div class="container">
  <div class='row'>
    <h3 class='lead'>Periode&nbsp;&nbsp;<%= link_to 'Buat Periode', new_period_path, class: 'btn btn-default' %></h3>

    <table class='table table-hover table-striped'>
      <thead>
        <tr>
          <th>Nama</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @periods.each do |period| %>
          <tr>
            <td><%= period.nama.titleize %></td>
            <td><%= link_to 'Edit', edit_period_path(period) %>&nbsp;&nbsp;<%= link_to 'Destroy', period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>

</div>
