<div class="container">
  <div class='row'>
    <h3 class='lead'>Periode</h3>

    <table class='table table-hover table-striped table-bordered'>
      <thead>
        <tr>
          <th>Bulan</th>
          <th>Tahun</th>
        </tr>
      </thead>

      <tbody>
        <% @periods.each do |period| %>
          <tr>
            <td><%= period.bulan.titleize %></td>
            <td><%= period.tahun %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>

</div>
