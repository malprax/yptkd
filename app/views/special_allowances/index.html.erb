<div class='container'>
  <div class='row'>
    <h3 class='lead'>Rincian Jabatan Khusus Dan Tunjangannya&nbsp;&nbsp;<%= link_to 'Buat Jabatan Khusus', new_special_allowance_path, class: 'btn btn-default' %>&nbsp;&nbsp;<%= link_to 'Download', special_allowances_path(@special_allowances, format:'pdf'), target:'_blank', class:'btn btn-primary' %></h3>
    <table class='table table-hover table-striped'>
      <thead>
        <tr>
          <th>Nama</th>
          <th>Satuan</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @special_allowances.each do |special_allowance| %>
          <tr>
            <td><%= special_allowance.nama.titleize %></td>
            <td><%= "#{number_to_currency(special_allowance.satuan, precision: 0, unit:'Rp ')}" %></td>

            <td><%= link_to 'Edit', edit_special_allowance_path(special_allowance), class:'btn btn-warning' %>&nbsp;&nbsp;<%= link_to 'Hapus', special_allowance, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>

          </tr>
        <% end %>
      </tbody>
    </table>

    <br>



  </div>
</div>
